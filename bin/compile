#!/bin/sh

set -e

echo "-----> Using Pyweb framework"
echo "-----> Installing Pyweb"
wget https://github.com/thecoder08/pyweb/releases/download/v1.0.3/pyweb-linux -O $1/pyweb-linux
chmod +x $1/pyweb-linux
echo "-----> Installing Pip"
wget https://bootstrap.pypa.io/get-pip.py
python get-pip.py
echo "-----> Installing Python dependencies"
cat $1/pyweb | xargs python -m pip install
